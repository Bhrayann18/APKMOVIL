<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF7DC"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="193dp"
        android:layout_height="172dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icono" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="RECUPERAR CONTARSEÑA"
        android:textColor="#000000"
        android:textSize="30sp" />
    <EditText
        android:layout_width="382dp"
        android:layout_height="89dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:hint="CONTRASEÑA ANTIGUA" />

    <EditText

        android:layout_width="382dp"
        android:layout_height="89dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:inputType="textPassword"
        android:hint="CONTRASEÑA NUEVA">

    </EditText>

    <EditText
        android:layout_width="382dp"
        android:layout_height="89dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:hint="REPITA CONTRASEÑA"
        android:inputType="textPassword"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:backgroundTint="#C2B8A3"
        android:textColor="@color/black"
        android:text="RECUPERAR"/>
    <ImageView
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="650dp"
        app:srcCompat="@drawable/modo_de_color" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="650dp"
        app:srcCompat="@drawable/_740697" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="650sp"
        app:srcCompat="@drawable/ayuda" />


</RelativeLayout>